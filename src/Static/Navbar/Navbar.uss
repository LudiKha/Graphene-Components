.navbar {
    color: var(--primary-color);
}

.bottombar {
    color: var(--primary-color);
}

.nav .border {
    position: absolute;
    border-top-width: var(--border-width);
    width: 100%;
    height: 0;
    border-top-color: var(--border-color);
    bottom: 0;
    margin: 0;
}

.nav.bottom .border {
    bottom: auto;
    top: 0;
}

.font1 {
    -unity-font-definition: resource('Fonts/Marcellus-Regular SDF');
    -unity-font-style: bold;
}
